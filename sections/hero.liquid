{% schema %}
{
  "name": "Hero",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "slider",
      "name": "Slider",
      "settings": [
        {
          "type": "text",
          "id": "title_text",
          "label": "Title Text",
          "default": "Welcome to Our Store (default)"
        },
        {
          "type": "textarea",
          "id": "description_text",
          "label": "Description Text",
          "default": "This is a short description of the store (default)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Upload an image for the hero section 1920px X 500px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "blocks": [{ "type": "slider" }, { "type": "slider" }, { "type": "slider" }]
    }
  ]
}
{% endschema %}
